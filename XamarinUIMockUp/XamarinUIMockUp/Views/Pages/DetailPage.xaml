<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinUIMockUp.Views.Pages.DetailPage">
    <NavigationPage.TitleView>
        <Label Text="My App" VerticalTextAlignment="Center"
               FontSize="Large"
               TextColor="White"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid RowDefinitions="10*, 2.3*,2*,10*"
              ColumnDefinitions="*,*,*"
              BackgroundColor="#e8f3f4">
            <Image Source="relaxImage"
                   Aspect="AspectFill"
                   Grid.ColumnSpan="3"/>
            <ImageButton Grid.Row="1"
                         Margin="-12"/>
            <ImageButton Grid.Row="1"
                         Margin="-12"
                         Grid.Column="1"/>
            <ImageButton Grid.Row="1"
                         Margin="-12"
                         Grid.Column="2"/>
            <Label Text="Hello"
                   Grid.Row="2"
                   Margin="20,20,0,0"
                   FontSize="Large"
                   Grid.ColumnSpan="3"
                   TextColor="#00cfbe"/>
            <Label Text="ffffffff"
                   Margin="20,20,0,0"
                   FontSize="Medium"
                   Grid.Row="3"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>